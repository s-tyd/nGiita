{
  "manifest_version": 2,
  "name": "nGiita",
  "version": "1.3",
  "description": "Hide users in Qiita",
  "permissions": [
    "storage"
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "css": [ "style.css" ],
      "matches": [
        "https://qiita.com/*"
      ],
      "js": [
        "js/jquery.min.js",
        "js/content.js"
      ]
    }
  ],
  "background": { "scripts": ["js/hot-reload.js"] },
  "icons": {
    "16": "icons/icon-16x16.png",
    "48": "icons/icon-48x48.png",
    "128": "icons/icon-128x128.png"
  }
}